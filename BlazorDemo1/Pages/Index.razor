@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<p>
    The value of our index counter is @(indexCounter). OK?
</p> 

<SurveyPrompt Title="How is Blazor working for you?" />

<Counter CurrentCount="@indexCounter" ButtonWasClicked="UpdateCounter" />

@code{
    private int indexCounter = 15;

    private void UpdateCounter(int count)
    {
        indexCounter = count;
    }
}